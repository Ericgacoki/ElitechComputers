<resources>

    <style name="ThemeAccount" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Orange</item>
        <item name="colorPrimaryDark">@color/Orange</item>
        <item name="colorAccent">@color/Orange</item>
        <item name="controlBackground">@color/white</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorDarkBlue</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/Orange</item>
        <item name="android:fontFamily">@font/exo</item>

    </style>

    <style name="AppTheme4" parent="Theme.MaterialComponents.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/exo</item>

    </style>

    <style name="textInput">
        <item name="android:textColor">#000</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:colorAccent">#0320C2</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>
</resources>
